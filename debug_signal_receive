import subprocess
import json
import time

def manual_test():
    # Dane z Twojego configu
    cli_path = r"C:\signal-cli\signal-cli-0.13.22\bin\signal-cli.bat"
    account = "+xxXXXxxXXxx"     # Twój numer bota
    
    print(f"--- TEST ODBIERANIA SYGNAŁU ({time.strftime('%H:%M:%S')}) ---")
    print(f"Łączenie z kontem: {account}...")
    
    try:
        # Próba odebrania wiadomości w formacie JSON
        cmd = [cli_path, "-u", account, "receive", "--json"]
        result = subprocess.run(cmd, capture_output=True, text=True, timeout=20)
        
        if result.stdout:
            print("[SUKCES] Wykryto surowe dane z Signal-CLI:")
            for line in result.stdout.strip().split('\n'):
                data = json.loads(line)
                msg = data.get('envelope', {}).get('dataMessage', {}).get('message')
                sender = data.get('envelope', {}).get('source')
                if msg:
                    print(f" -> OD: {sender} | TREŚĆ: {msg}")
        else:
            print("[INFO] Skrzynka pusta lub brak nowych wiadomości.")
            
    except subprocess.TimeoutExpired:
        print("[TIMEOUT] Signal-cli nie odpowiedział w ciągu 20s.")
    except Exception as e:
        print(f"[BŁĄD] Coś poszło nie tak: {e}")

if __name__ == "__main__":
    manual_test()
